{
  "name": "dialogdrafter",
  "private": true,
  "version": "0.1.0",
  "description": "Standalone Electron app that streamlines the creation of chat logs through a user-friendly interface. ",
  "homepage": "https://github.com/bartlomiej-aleksiejczyk/DialogDrafter#readme",
  "author": "Bart≈Çomiej Aleksiejczyk",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@electron/remote": "^2.0.11",
    "ajv": "^6.12.6",
    "lodash": "^4.17.21",
    "marked": "^9.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "react-hot-toast": "^2.4.1",
    "save": "^2.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.8.0",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "productName": "DialogDrafter",
    "directories": {
      "buildResources": "build",
      "output": "electronOutput"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "!*.*",
      "!**/*",
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraFiles": [
      {
        "from": "./bundleRootDirContent",
        "to": "./",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "main": "dist-electron/main.js",
  "postinstall": "electron-builder install-app-deps"
}
